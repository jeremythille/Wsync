<Window x:Class="Wsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wsync"
        mc:Ignorable="d"
        Title="Wsync" Height="600" Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Confirmation Dialog Overlay -->
        <Grid x:Name="ConfirmationOverlay" 
              Grid.Row="0" 
              Grid.RowSpan="5"
              Background="#80000000"
              Visibility="Collapsed"
              ZIndex="100">
            <Border VerticalAlignment="Center" HorizontalAlignment="Center" 
                    Width="250" 
                    Background="White"
                    Padding="20">
                <StackPanel>
                    <TextBlock x:Name="ConfirmationMessage"
                               Text="Confirm action"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#333"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,16"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="ConfirmYesButton"
                                Content="Yes"
                                Width="80"
                                Padding="12,6"
                                FontSize="11"
                                FontWeight="SemiBold"
                                Background="#0078D4"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ConfirmYesButton_Click"
                                Margin="0,0,8,0"/>
                        
                        <Button x:Name="ConfirmNoButton"
                                Content="No"
                                Width="80"
                                Padding="12,6"
                                FontSize="11"
                                FontWeight="SemiBold"
                                Background="#E0E0E0"
                                Foreground="#333"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ConfirmNoButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Info Hint -->
        <TextBlock Grid.Row="0"
                   Text="Edit the project list in program/config.json5" 
                   FontSize="9" 
                   Foreground="#999" 
                   Margin="15,15,15,8"
                   TextWrapping="Wrap"/>
        
        <!-- Project Selector with Refresh Button -->
        <Grid Grid.Row="1" Margin="15,0,15,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            
            <ComboBox Grid.Column="0"
                      x:Name="ProjectComboBox" 
                      Height="48" 
                      Padding="12"
                      FontSize="14"
                      FontWeight="SemiBold"
                      Background="White"
                      BorderThickness="2"
                      BorderBrush="#0078D4"
                      Margin="0,0,8,0"/>
            
            <Button Grid.Column="1"
                    x:Name="RefreshButton"
                    Width="42"
                    Height="48"
                    ToolTip="Refresh file comparison"
                    Background="White"
                    Foreground="#0078D4"
                    FontSize="20"
                    Padding="0"
                    BorderThickness="2"
                    BorderBrush="#0078D4"
                    Cursor="Hand"
                    Click="RefreshButton_Click">
                ↻
            </Button>
        </Grid>

        <!-- Mode Selector and Abort Button -->
        <Grid Grid.Row="2" Margin="15,0,15,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Loading Spinner for analysis -->
            <Grid Grid.Column="0" x:Name="AnalysisSpinner" Height="20" VerticalAlignment="Center" Visibility="Collapsed">
                <TextBlock x:Name="AnalysisSpinnerText" Text="⠙" FontSize="14" Foreground="#0078D4" VerticalAlignment="Center"/>
            </Grid>

            <!-- Analysis Mode Selector -->
            <ComboBox Grid.Column="1"
                      x:Name="ModeComboBox"
                      Height="32"
                      Padding="8"
                      FontSize="11"
                      Background="White"
                      BorderThickness="1"
                      BorderBrush="#DDD"
                      VerticalContentAlignment="Center"
                      SelectionChanged="ModeComboBox_SelectionChanged">
                <ComboBoxItem Content="Full mode (all files timestamp and size)" Tag="Full"/>
                <ComboBoxItem Content="Quick mode (Make a decision after 3 differing files)" Tag="Quick"/>
                <ComboBoxItem Content="Git mode (newer commit)" Tag="Git"/>
            </ComboBox>
            
            <!-- Abort Button -->
            <Button Grid.Column="2"
                    x:Name="AbortAnalysisButton"
                    Padding="8,4"
                    FontSize="11"
                    FontWeight="SemiBold"
                    Background="#D32F2F"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="AbortAnalysisButton_Click"
                    Visibility="Collapsed"
                    Margin="8,0,0,0"
                    ToolTip="Stop the current analysis">
                ✕ Abort
            </Button>
        </Grid>

        <!-- Sync Controls -->
        <Grid Grid.Row="3" Margin="15,8,15,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Desktop Icon -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="DesktopIcon" Text="💻" FontSize="48" TextAlignment="Center" Foreground="#333"/>
                <TextBlock Text="Desktop" FontSize="10" TextAlignment="Center" Margin="0,4,0,0" Foreground="#666"/>
                <TextBlock x:Name="LocalPathText" 
                           Text="" 
                           FontSize="8" 
                           TextAlignment="Center" 
                           Margin="0,2,0,0" 
                           Foreground="#999"
                           TextWrapping="Wrap"
                           MaxWidth="90"/>
            </StackPanel>

            <!-- Sync Buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Margin="12,0">
                <Button x:Name="SyncRightButton" 
                        Width="36" Height="36" 
                        ToolTip="Sync from Desktop to FTP"
                        Background="White" 
                        Foreground="#333"
                        FontSize="18"
                        Padding="0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SyncRightButton_Click"
                        Margin="0,0,0,8">
                    →
                </Button>
                <Button x:Name="SyncLeftButton" 
                        Width="36" Height="36" 
                        ToolTip="Sync from FTP to Desktop"
                        Background="White" 
                        Foreground="#333"
                        FontSize="18"
                        Padding="0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SyncLeftButton_Click">
                    ←
                </Button>
                
                <!-- Stop Transfer Button - appears during sync -->
                <Button x:Name="StopTransferButton"
                        Height="36"
                        ToolTip="Stop the current transfer"
                        Background="#D32F2F"
                        Foreground="White"
                        FontSize="11"
                        FontWeight="SemiBold"
                        Padding="8,4"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="StopTransferButton_Click"
                        Visibility="Collapsed"
                        Margin="0,8,0,0">
                    ⏹ Stop
                </Button>
            </StackPanel>

            <!-- Cloud Icon -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="CloudIcon" Text="☁" FontSize="48" TextAlignment="Center" Foreground="#333"/>
                <TextBlock Text="FTP Server" FontSize="10" TextAlignment="Center" Margin="0,4,0,0" Foreground="#666"/>
                <TextBlock x:Name="RemotePathText" 
                           Text="" 
                           FontSize="8" 
                           TextAlignment="Center" 
                           Margin="0,2,0,0" 
                           Foreground="#999"
                           TextWrapping="Wrap"
                           MaxWidth="90"/>
            </StackPanel>
        </Grid>

        <!-- Status Panel - takes remaining space -->
        <Grid Grid.Row="4" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Loading Spinner -->
            <Grid Grid.Row="0" x:Name="LoadingSpinner" Height="20" Margin="3,3,3,3" HorizontalAlignment="Left" Visibility="Collapsed">
                <TextBlock x:Name="SpinnerText" Text="⠙" FontSize="18" Foreground="#0078D4"/>
            </Grid>

            <!-- Single Content TextBox - shows logs, then recommendations -->
            <TextBox Grid.Row="1"
                     x:Name="RecommendationText" 
                     Text="Select a project and click Refresh to compare files." 
                     FontSize="11" 
                     Foreground="#333"
                     TextWrapping="Wrap"
                     FontWeight="SemiBold"
                     Margin="3,0,3,3"
                     IsReadOnly="True"
                     Background="White"
                     BorderThickness="0"
                     Padding="3"
                     FontFamily="Segoe UI"
                     VerticalScrollBarVisibility="Auto"/>
        </Grid>
    </Grid>
</Window>
