{
  // Optional: Path to WinSCP executable or folder
  // Can be either:
  //   - Full path to winscp.com: "C:\\Program Files\\WinSCP\\winscp.com"
  //   - Folder path: "D:\\Progz\\dev\\WinSCP" (will append winscp.com automatically)
  // If not provided, WinSCP will be searched in PATH and common installation locations
  winscpPath: "D:\\path\\to\\WinSCP",

  projects: [
    {
      name: "My Project 1",
      localPath: "D:\\my\\local\\path",
      remotePath: "/www/my_project",
    },
    {
      name: "My Project 2",
      localPath: "D:\\another\\local\\path",
      remotePath: "/www/another_project",
    },
  ],

  ftp: {
    host: "11.22.33.44",
    port: 22,
    username: "your-username",
    password: "your-password",
    passiveMode: false, // Only relevant for FTP. Set to true if FTP is behind a firewall.
    secure: true,  // Set to true for SFTP, false for FTP
  },

  // File extensions to exclude from ANALYSIS only (they will still be synced)
  // Default includes common non-code file types that clutter analysis view
  excludedExtensionsFromAnalysis: [
    "txt",     // Documentation/readme files that cause timestamp mismatches
    "tmp",
    "bak",
    "log",
  ],

  // File extensions to exclude from BOTH analysis AND sync
  // These files will never be synced to remote
  excludedExtensionsFromSync: [],

  // Specific filenames to exclude from ANALYSIS only (case insensitive)
  // Use this to hide specific noisy files from analysis view
  // The files will still be synced
  excludedFilesFromAnalysis: [
    "readme.txt",
    ".ds_store",
    "thumbs.db",
  ],

  // Specific filenames to exclude from BOTH analysis AND sync (case insensitive)
  excludedFilesFromSync: [],

  // Folders to exclude from ANALYSIS only (even if they're sub-folders)
  // These folders will be synced anyway.
  // Use this to speed up the analysis display
  excludedFoldersFromAnalysis: [
    "assets",
    "static",
    "uploads",
  ],

  // Folders to exclude from BOTH analysis AND sync (even if they're sub-folders)
  // These folders will never be synced to the remote
  // Use this for local-only folders like build artifacts, node_modules, etc.
  excludedFoldersFromSync: [
    "node_modules",
    "output",
    "build",
    "dist",
  ],
}
